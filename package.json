{
  "name": "faber-website",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "bun run build/generate.ts",
    "sync": "bun run sync:grammar && bun run sync:examples && bun run sync:research",
    "sync:grammar": "bun run build/sync-grammar.ts",
    "sync:examples": "bun run build/sync-examples.ts",
    "sync:research": "bun run build/sync-research.ts",
    "dev": "bun run build && bunx serve dist",
    "clean": "rm -rf dist/*"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "marked": "^15.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9"
  }
}
